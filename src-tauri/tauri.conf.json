{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "InfraBooth Downloader",
  "version": "1.0.0",
  "identifier": "com.infrabooth.downloader",
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["ib-downloader"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlCRTQ5ODJCM0NCQjk0OUMKUldTY2xMczhLNWprbS9OQ1A0VjlrSkdvdFg0aGc1WjhuWDRucENtRjhxaWwxWlFhT1hYSDREWFQK",
      "endpoints": [
        "https://github.com/bretheskevin/soundcloud-downloader/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "InfraBooth Downloader",
        "width": 700,
        "height": 700,
        "minWidth": 520,
        "minHeight": 500,
        "resizable": true,
        "center": true,
        "devtools": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; img-src 'self' https: data:; style-src 'self' 'unsafe-inline'; connect-src 'self' https://api.soundcloud.com https://api-v2.soundcloud.com https://api-auth.soundcloud.com https://secure.soundcloud.com; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/yt-dlp",
      "binaries/ffmpeg",
      "binaries/ffprobe"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    }
  }
}
