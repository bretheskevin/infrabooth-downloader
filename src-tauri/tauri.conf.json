{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "InfraBooth Downloader",
  "version": "0.1.0",
  "identifier": "com.infrabooth.downloader",
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["ib-downloader"]
      }
    }
  },
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "InfraBooth Downloader",
        "width": 600,
        "height": 700,
        "minWidth": 400,
        "minHeight": 500,
        "resizable": true,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/yt-dlp"
    ]
  }
}
